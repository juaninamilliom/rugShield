{
  "name": "rugshield",
  "version": "0.1.0",
  "description": "SUI-first multi-chain smart contract security analysis platform",
  "main": "dist/index.js",
  "scripts": {
    "prisma:generate": "PRISMA_ENGINES_CACHE_DIR=/tmp/prisma-engines prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "build": "npm run prisma:generate && tsc",
    "start:api": "node dist/api/server.js",
    "test:ts": "npm run prisma:generate && jest --runInBand",
    "test:db": "RUN_DB_TESTS=1 sh -c 'npm run prisma:generate && jest --runInBand tests/integration/repository.db.test.ts'",
    "test": "npm run prisma:generate && jest",
    "test:coverage": "npm run prisma:generate && jest --coverage"
  },
  "keywords": ["security", "sui", "evm", "solana", "audit", "rugpull"],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "axios": "^1.6.5",
    "ethers": "^6.10.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^6.19.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
